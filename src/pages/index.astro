<style>
  .project-items > * {
    counter-increment: count;
    display: block;
  }

  .project-items > *::before {
    content: counter(count);
    font-size: var(--text-3xl);
    line-height: var(--leading-tight);
    text-align: right;
    position: absolute;
    left: -60px;
    margin-top: 0.8em;
  }

  .project-items > *:nth-child(-n + 9)::before {
    content: "0" counter(count);
  }
</style>
