                  <div class="flex-1">{date[0]}{date[1] ? `â€“${date[1]}` : ''}</div>
                  <div>{role}</div>
                </div>
                <div class="md:col-span-5 space-y-1">
                  <h2 class="text-3xl">{company}</h2>
                  <p class="text-2xl">{lede}</p>
                  {tags ? <div class="flex flex-wrap gap-2 mt-4">
                    {tags.map((tag) => {
                    return (<span class="text-xl whitespace-nowrap">{tag}</span> <span class="text-xl last-of-type:hidden">&bull;</span>)
                    })}
                  </div> : null}
                  {caseStudy ? (
                    <a
                      class="group block duration-300 ease-out mt-6"
                      href={caseStudy}
                    >
                      <div class="relative bg-body-highlight group-hover:bg-body-highlight-focus bg-blur-10 rounded-xl flex-1 p-6 transition-colors duration-300 ease-out pr-12">
                        <p class="mb-2 leading-relaxed text-2xl">View my Case Study</p>
                        <div class="absolute right-6 group-hover:right-4 w-6 top-8 sm:top-1/2 sm:-translate-y-1/2 duration-300 ease-out">
                          <ArrowRight />
                        </div>
                      </div>
                    </a>
