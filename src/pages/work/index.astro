      </h1>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="space-y-24">
        {WORK.map(({ date, role, company, lede, tags, caseStudy }) => (
            <div>
              <div class="space-y-4 grid md:grid-cols-8">
